    <item android:top="0dp" >
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <size android:height="1dp" />
            <corners android:topLeftRadius="15dp" android:topRightRadius="15dp" android:bottomRightRadius="15dp" android:bottomLeftRadius="15dp" />
        </shape>
    </item>
    <!-- Nền màu #2E2E2E -->
    <item android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:topLeftRadius="10dp" android:topRightRadius="10dp" android:bottomRightRadius="10dp" android:bottomLeftRadius="10dp" />
        </shape>
    </item>

</layer-list>
